---
interface Props {
	className?: string
}

const { className } = Astro.props
---

<div
	class:list={[
		"w-container mx-auto block h-full w-full max-w-2xl px-7.5 lg:max-w-content",
		className,
	]}
>
	<slot />
</div>
<style>
	.w-container::before,
	.w-container::after {
		content: " ";
		grid-area: 1 / 1 / 2 / 2;
		display: table;
	}

	.w-container::after {
		clear: both;
	}
</style>
