---
import type { HTMLAttributes } from "astro/types"

interface Props extends HTMLAttributes<"img"> {}

const { alt, ...props } = Astro.props
---

<img
	alt={alt}
	class="-mr-4 flex h-11 w-11 max-w-full items-center justify-center rounded-full border-4 border-solid border-bg-primary object-cover align-middle"
	loading="lazy"
	{...props}
/>
