---
import type { HTMLAttributes } from "astro/types"

export interface Option {
	value: string
	label: string
}

interface Props extends HTMLAttributes<"select"> {
	options: Option[]
	placeholder: string
}

const { class: classes, placeholder, options, ...attrs } = Astro.props
---

<select
	class:list={[
		"my-0 h-[50px] w-full rounded-[14px] border-[1.5px] border-solid border-secondary bg-transparent px-3.5 text-base font-semibold transition-colors focus:border-tertiary focus:outline-0 focus-visible:outline-0 disabled:cursor-not-allowed disabled:opacity-50 sm:px-6 md:h-[60px] md:text-lg md:leading-8",
		classes,
	]}
	{...attrs}
>
	<option value="">{placeholder}</option>
	{options.map((opt) => <option value={opt.value}>{opt.label}</option>)}
</select>
