---
import MainContainer from "@/components/MainContainer.astro"
import PhoneLink from "@/components/PhoneLink.astro"
import PrimaryButton from "@/components/PrimaryButton.astro"
import { BASIC_DATA } from "@/consts/basic"
import { getI18N } from "@/i18n"
import Decorative from "@/icons/Decorative.astro"

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })
---

<section
	class="w-full overflow-hidden bg-[url(https://pub-bf42e1138049457e88ff3562129206f5.r2.dev/hero-asset.svg)] bg-[auto_85%] bg-[50%_0] bg-no-repeat pt-40 md:pt-48 lg:bg-cover lg:bg-[50%] lg:pt-56"
>
	<MainContainer>
		<div class="flex flex-col items-center justify-start gap-x-[90px] lg:flex-row lg:items-start">
			<div
				class="relative z-1 flex w-full max-w-none flex-none flex-col items-start gap-y-5 md:gap-y-8 lg:max-w-2xl lg:gap-y-12"
			>
				<h1 class="my-0 font-title text-5xl font-black -tracking-[.1rem] md:text-7xl lg:text-8xl">
					{i18n.HERO.TITLE}
				</h1>
				<div class="max-w-none lg:max-w-xl">
					<p class="text-xl font-semibold leading-8 text-neutral-700">
						{i18n.HERO.SUBTITLE}
					</p>
				</div>
				<PhoneLink text={i18n.HERO.PHONE_LINK_TEXT} phone={BASIC_DATA.phone} variant="hero" />
				<PrimaryButton href="#Services"> {i18n.HERO.BUTTON_TEXT} </PrimaryButton>
				<Decorative
					class="absolute bottom-0 left-auto right-0 top-auto -z-1 inline-block w-16 max-w-full rotate-12 align-middle text-tertiary md:w-24 lg:-right-[6rem] lg:bottom-0 lg:left-auto lg:top-16"
				/>
			</div>
			<div class="h-auto w-full max-w-3xl flex-none pb-20 pt-10 sm:pt-0">
				<img
					src="https://pub-bf42e1138049457e88ff3562129206f5.r2.dev/hero-image.webp"
					loading="lazy"
					sizes="(max-width: 479px) 100vw, (max-width: 767px) 90vw, (max-width: 991px) 77vw, 755px"
					srcset="https://pub-e0766a16d9da4b039da6c1561ffd52b6.r2.dev/hero-image_500.webp 500w, https://pub-e0766a16d9da4b039da6c1561ffd52b6.r2.dev/hero-image_800.webp 800w, https://pub-e0766a16d9da4b039da6c1561ffd52b6.r2.dev/hero-image_1080.webp 1080w, https://pub-bf42e1138049457e88ff3562129206f5.r2.dev/hero-image.webp 1578w"
					alt="Imagen principal de la pÃ¡gina de inicio de Feline Vets"
					class="h-full w-full object-contain"
				/>
			</div>
		</div>
	</MainContainer>
</section>
